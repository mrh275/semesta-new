{
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:base": "tailwindcss -i ./src/css/base.css -o ./dist/css/base.css --watch",
    "dev:components": "tailwindcss -i ./src/css/components.css -o ./dist/css/components.css --watch",
    "dev:buttons": "tailwindcss -i ./src/css/buttons.css -o ./dist/css/buttons.css --watch",
    "dev:typo": "tailwindcss -i ./src/css/typography.css -o ./dist/css/typography.css --watch"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.4.10"
  }
}
